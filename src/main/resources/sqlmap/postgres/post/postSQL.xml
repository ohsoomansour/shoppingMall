<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace=com.shoppingmall.admin.repository.MemberMapper -->
<mapper namespace="PostSQL"> 
	<select id="PostSQL.getAllPostsList" resultType="dataMap">
    <!-- u_id 서브 쿼리 작성 join --> 
		<![CDATA[
			SELECT p.p_id
			   , tu.u_name
			   , tu.u_type
			   , p.p_title
			   , p.p_desc
			   , p.p_contents
			   , p.p_view
			   , p.created_at
			   , p.updated_at

			FROM POST p LEFT JOIN tb_user tu ON p.u_id = tu.u_id;   
			
		]]>
	</select>	
	
	
	<update id="PostSQL.doUpdateContent"  parameterType="dataMap" >
	  <![CDATA[

      ]]>
    </update>  
</mapper>