<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace=com.shoppingmall.admin.repository.MemberMapper -->
<mapper namespace="MemberSQL"> 
	<select id="doGetMemberList" resultType="dataMap">
	<!-- 회원관리, 전체 회원  -->
		<![CDATA[
			SELECT
				*
			FROM
				MEMBER		
		]]>
	</select>	
	<select id="doCountMemberId" resultType="int">
		<!-- 2021-04-21 추정완 -->
		/*
			SQL ID : Member_v_SQL.doCountMemberId
			아이디 중복검사
		*/
		<![CDATA[
			SELECT
				COUNT(*)
			FROM
				TBLMEMBER
			WHERE
				ID = #{id}
		]]>
	</select>
	
	<update id="doUpdateSignUpApproval"  parameterType="dataMap" >
	  <![CDATA[
         UPDATE member
		 	SET
		 	  signup_approval = true
		 WHERE id = #{seqno}::INTEGER
      ]]>
    </update>  
</mapper>